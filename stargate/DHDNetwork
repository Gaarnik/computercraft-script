--    API    --

-- CONSTANTS --
FILENAME = "dhd_list"
FILE_DISK = "/disk/"..FILENAME

-- FUNCTIONS --

--   MAIN    --
while true do
  local e = os.pullEvent("disk")
  
  shell.run("rm", FILE_DISK)
  shell.run("cp", FILENAME, FILE_DISK)
    
  rs.setOutput("bottom", true)
  sleep(1)
  rs.setOutput("bottom", false)
end




